@{
    ViewBag.Title = "Error";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
</head>
<body>
    <hgroup>
        <h1>Oops!</h1>
        @if (Model == null) {
            <h2>An error occurred while processing your request.</h2>
        } else {
            <h2>@Model</h2>
        }
    </hgroup>
</body>
</html>
